<Window x:Class="WPFApiTest.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApiTest"
        mc:Ignorable="d"
        Title="Вхід в систему" Height="230.681" Width="485">
    <Grid>
        <Label Content="Електронна пошта" HorizontalAlignment="Left" Margin="32,31,0,0" VerticalAlignment="Top" Height="29" Width="147" FontSize="16"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="196,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" FontSize="14"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="32,74,0,0" VerticalAlignment="Top" Height="29" Width="147" FontSize="16"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="196,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" FontSize="14"/>
        <Button x:Name="btnLogin" Content="Вхід" HorizontalAlignment="Left" Margin="86,139,0,0" VerticalAlignment="Top" Width="121" Height="33" FontSize="16" Click="btnLogin_Click"/>
        <Button x:Name="btnClose" Content="Скасувати" HorizontalAlignment="Left" Margin="279,139,0,0" VerticalAlignment="Top" Width="121" Height="33" FontSize="16" Click="btnClose_Click"/>
    </Grid>
</Window>
